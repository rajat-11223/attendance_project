<%#= form_for( 'update_apply_leave', :html => {'class' => 'form-horizontal'},:remote=> true) do |f| %>
  <%= form_tag({ action: "update_apply_leave"}, class: 'form-horizontal' , method: "post") do  %>
         
              <div id="form-wizard-1" class="step">
                <div class="control-group">
                  <label class="control-label">Name</label>
                  <div class="controls">
                    <input id="username" type="text" readonly name="username" value="<%= @edit_request_leave.user.first_name.capitalize %>" />
                  </div>
                </div>


				<div class="control-group">
	                  <label class="control-label">Leave from</label>
	                  <div class="controls">
	                    <input type="text" name="dated_from" value= "<%= @edit_request_leave.date_from %> - <%= @edit_request_leave.date_to %>" id="datepicker2"/> 
	                  </div>
                </div>



                <div class="control-group">
	                  <label class="control-label">Subject</label>
	                  <div class="controls">
	                    <input id="subject" type="text" value="<%= @edit_request_leave.subject %>" name="subject" />
	                    
	                  </div>
                </div>
                <input type="hidden" name="leave_id" value="<%=params[:lid]%>">
                <div class="control-group">
	                  <label class="control-label">Message</label>
	                  <div class="controls">
	                     <textarea name="message" placeholder="Enter message here..."><%= @edit_request_leave.message %></textarea> 
	                  </div>
                </div>

              </div>
              <input type="hidden" name="leave_id" value="<%=params[:lid]%>">
              <% if @user_role.master_role_id == 1 %>
              
                <div class="control-group">
	                  <label class="control-label">Status</label>
	                  <%= @aprove = @edit_request_leave.status == 1 ? "selected" : "" %>
	                    	<%= @disaprove = @edit_request_leave.status == 0 ? "selected" : "" %>
	                  <div class="controls">
	                    <select name="status" id="status_leave">
	                    	
  <option value="0" >Un-Approve</option>
  <option value="1" >Approve</option>
  </select>
	                    
	                  </div>
                </div>
                <% end %>

              </div>
              <div class="form-actions">
               
                <%= submit_tag "Submit",:class=> 'btn btn-primary' %>
               
              </div>
              
            <% end %>


<script type="text/javascript">
   var picker = new Lightpick({
    field: document.getElementById('datepicker2'),
    singleDate: false,
    minDate: moment(),
    format: 'YYYY-MM-DD',
    autoApply: true,
    onSelect: function(start, end){
        var str = '';
        str += start ? start.format('Do MMMM YYYY') + ' to ' : '';
        str += end ? end.format('Do MMMM YYYY') : '...';
        document.getElementById('datepicker2').innerHTML = str;
         
    }
});
  
</script> 
